{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "build and run",
          "type": "shell",
          "command": "cl.exe",
          "args": [
              "/EHsc",
              "${workspaceFolder}/Fale.cpp",
              "/Fe:",
              "${workspaceFolder}/Fale.exe"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "problemMatcher": ["$msCompile"],
          "detail": "Generated task by VS Code"
      },
      {
          "label": "run",
          "type": "shell",
          "command": "${workspaceFolder}/Fale.exe",
          "group": {
              "kind": "test",
              "isDefault": true
          },
          "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": false,
              "panel": "shared"
          }
      }
  ]
}